#!/bin/bash

tar -xf pciutils-3.7.0.tar.xz
cd pciutils-3.7.0

make PREFIX=/usr                \
     SHAREDIR=/usr/share/hwdata \
     SHARED=yes
     
make PREFIX=/usr                \
     SHAREDIR=/usr/share/hwdata \
     SHARED=yes                 \
     install install-lib        &&

chmod -v 755 /usr/lib/libpci.so

cat > /etc/cron.weekly/update-pciids.sh << "EOF" &&
#!/bin/bash
/usr/sbin/update-pciids
EOF
chmod 754 /etc/cron.weekly/update-pciids.sh
